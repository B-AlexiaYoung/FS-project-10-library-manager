extends layout.pug
block content  
    body
        h1 Patron: Return Book
        p <strong> Book Title: </strong> #{loanreturn.book.title}
               
        p <strong>Loaned By: </strong>#{loanreturn.patron.first_name}  #{loanreturn.patron.last_name}
               
        p <strong> Loaned On: </strong> #{loanreturn.loaned_on}
               
        p <strong>  Return By: </strong> #{loanreturn.return_by}
        form(action="/return/returned/" +`${loanreturn.book_id}` + "?_method=PUT" method="post")
            p
                label(for="returned_on") Returned on:
                input(id="returned_on" name="returned_on" type="text" value= moment().format("YYYY-MM-DD") required)
            p
                input(type="submit" value="Return Book")
    